<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motivo.AddFichaActivity">

    <EditText
        android:id="@+id/txtnumero"
        android:layout_width="276dp"
        android:layout_height="123dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ingresa el numero de ficha"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="72dp"
        android:background="#8653E2F4"
        android:text="Add ficha"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/txtlider"
        app:layout_constraintTop_toBottomOf="@+id/txtlider" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:onClick="click"
        android:text="Agregar"
        app:layout_constraintStart_toStartOf="@+id/txtlider"
        app:layout_constraintTop_toBottomOf="@+id/txtlider" />

    <EditText
        android:id="@+id/txtprograma"
        android:layout_width="273dp"
        android:layout_height="106dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Ingrese el nombre del programa"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtnumero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtnumero"
        app:layout_constraintTop_toBottomOf="@+id/txtnumero" />

    <EditText
        android:id="@+id/txtlider"
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Ingrese nombre lider de ficha"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtprograma"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtprograma"
        app:layout_constraintTop_toBottomOf="@+id/txtprograma" />
</androidx.constraintlayout.widget.ConstraintLayout>