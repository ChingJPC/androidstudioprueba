<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motivo.AddMotivoActivity">

    <EditText
        android:id="@+id/txtmotivo"
        android:layout_width="274dp"
        android:layout_height="93dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:hint="Ingresa el Motivo"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:onClick="click"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="@+id/btnback"
        app:layout_constraintStart_toStartOf="@+id/txtmotivo"
        app:layout_constraintTop_toBottomOf="@+id/txtmotivo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/txtmotivo"
        app:layout_constraintTop_toBottomOf="@+id/txtmotivo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:layout_marginBottom="72dp"
        android:background="#8653E2F4"
        android:text="Add Motivo"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtmotivo"
        app:layout_constraintEnd_toEndOf="@+id/txtmotivo"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/txtmotivo" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="441dp">

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>