<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motivo.IndexFichaActivity">

    <Button
        android:id="@+id/btnaddficha"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:onClick="addficha"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/btnbackficha"
        app:layout_constraintEnd_toStartOf="@+id/btnbackficha"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listaficha"
        android:layout_width="412dp"
        android:layout_height="523dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/btnbackficha"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:layout_marginEnd="48dp"
        android:onClick="backficha"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="636dp"
        android:background="#FF0000"
        android:backgroundTint="#D60303"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>